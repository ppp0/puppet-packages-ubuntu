[Unit]
SourcePath=/tmp/bar-daemon
Description=Executes bar-daemon and continuously outputs foo to file
Before=runlevel2.target runlevel3.target runlevel4.target runlevel5.target shutdown.target
After=network.target

[Service]
Restart=no
TimeoutSec=5
KillMode=process
RemainAfterExit=yes
ExecStart=/tmp/bar-daemon

[Install]
WantedBy=multiuser.target
